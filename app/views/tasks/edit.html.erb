<div class="container">
  <h1 style="padding: 10px;">Edit task</h1>

  <div class="form-group" style="padding:10px;">
    <form action="/tasks" method="post">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

      <div class="form-group">
        <label for="form-task-title">Task title: </label>
        <input type="text" name="task[title]" class="form-control" id="title" required></textarea>
      </div>

      <div class="form-group">
        <label for="form-task-details">Details: </label>
        <input type="text" name="task[details]" class="form-control" id="details"></textarea>
      </div>

      <div class="form-group">
        <input type="submit" class="btn btn-primary">
      </div>
    </form>
  </div>
  <div class="container">
    <%= link_to "Back to list", tasks_path %>
  </div>
</div>
